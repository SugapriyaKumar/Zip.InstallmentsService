@model Zip.Installments.App.ViewModel.OrdersViewModel
@{
    ViewData["Title"] = "Home Page";
}

@if (@ViewBag.IsError!=null&&@ViewBag.IsError)
{
<h1 class="text-danger">Error</h1>
<h2 class="text-danger">An error occurred while processing your request. <br>Please try again</h2>
}


<div class="text-center">
    <h1 class="display-4">Welcome to Installments Calculator</h1>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <table>
        <tr>
            <td>@Html.LabelFor(model => model.OrderAmount, htmlAttributes: new { @class = "control-label col-md-10" })</td>
            <td>@Html.EditorFor(model => model.OrderAmount, new { htmlAttributes = new { @class = "form-control", @type = "number", @required="required",min="1" } }) </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.OrderDate, htmlAttributes: new { @class = "control-label col-md-2" })</td>
            <td>@Html.EditorFor(model => model.OrderDate, new { htmlAttributes = new { @class = "form-control" } })</td>
        </tr>
    </table>
    <div> 
        <br/>
        <div class="col-md-4">
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg btn-block w-100">Calculate Installments</button>
            </div>
        </div>
    </div>  
}