@model Zip.Installments.App.ViewModel.PaymentPlanViewModel
@{
    ViewData["Title"] = "Result Page";
}
<div>
    <h2>
        @Html.DisplayNameFor(model => model.PurchaseAmount) : @Html.DisplayFor(model => model.PurchaseAmount)
    </h2>
</div>

<table class="table">    
    <tr>
        <th>
            @Html.DisplayName("Due Date")
        </th>
        <th>
            @Html.DisplayName("Due Amount ($)")
        </th>        
    </tr>

    @foreach (var item in Model.Installments)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DueDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>                     
        </tr>
    }
</table>
<div>
    <p><a href="" class="btn-link">Check for new order amount &raquo;</a></p>
</div>
